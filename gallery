            --secondary-dark: #1A1A1A;     /* Secondary 30% - Black/Charcoal */
            --accent: #FF6B35;              /* Accent 10% - Vibrant Orange */
            --text-dark: #2C2C2C;           /* Dark text for readability */
            --text-light: #F5F5F5;          /* Light text */
            --border-light: #E0E0E0;        /* Light borders */
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: var(--primary-light);
            color: var(--text-dark);
